    <a class="close-reveal-modal">&#215;</a>
</div>

<!-- Mobile Navigation -->
<nav class="tab-bar show-for-small">
	<a class="left-off-canvas-toggle menu-icon">
		<span>Remember</span>
	</a>
</nav>

<!-- Header -->
<header>
  <div class="row">
    <div class="small-12 columns">
      <h1>Remember Memorable Events</h1>
      <h4>Add comments and tags your photos.</h4>
    </div>
  </div>
</header>

<!-- Breadcrumbs -->
<nav class="breadcrumbs">
  <div class="medium-6 small-3 columns"></div>
  <a href="#">Home</a>
  <a href="#">Features</a>
  <a class="current" href="#">Cloning</a>
</nav>

<%= yield %>

</body>
</html>
