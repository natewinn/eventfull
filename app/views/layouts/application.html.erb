<!DOCTYPE html>
<html>
  <head>
    <title>EventFull | Post + Tag Photos</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800" />
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <!-- Navigation Logo -->
    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
          <h1><%= link_to('EventFull', events_path) %></h1>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"></a></li>
      </ul>

      <!-- Navigation Links -->
      <section class="top-bar-section">
        <ul class="right">
          <li class="divider"></li>
          <li class="has-form">
            <a class="small button" href="/photos/new">Upload Photo</a>
          </li>  
        </ul>
      </section>
    </nav>

    <!-- Header -->
    <header>
      <div class="row">
        <div class="small-12 columns">
          <h1>Remember Events</h1>
          <h4>Add comments and tags to your photos.</h4>
        </div>
      </div>
    </header>

    <%= yield %>

  </body>
</html>
